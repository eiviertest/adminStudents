<div class="col-md-12 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Add student</h3>
        </div>
        <div class="card-body">
            <form action="/students/saveStudent" method="POST">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Full name</span>
                        </div>
                        <input type="text" name="firstName" class="form-control" placeholder="First name" required="true" pattern="[A-Za-z\s]{4,30}" title="No numeric or strange/special characters are accepted">
                        <input type="text" name="fatherLastName" class="form-control" placeholder="Father's last name" required="true" pattern="[A-Za-z\s]{3,40}" title="No numeric or strange/special characters are accepted">
                        <input type="text" name="motherLastName" class="form-control" placeholder="Mother's last name" pattern="[A-Za-z\s]{3,40}" title="No numeric or strange/special characters are accepted">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Address</span>
                        </div>
                        <input type="text" name="neighborhood" class="form-control" placeholder="Neighborhood" required="true" pattern="[A-Za-z\s]{4,30}" title="No numeric or strange/special characters are accepted">
                        <input type="text" name="street" class="form-control" placeholder="Street" required="true" pattern="[A-Za-z\s]{3,40}" title="No numeric or strange/special characters are accepted">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Outside and inside number</span>
                        </div>
                        <input type="number" name="outside" class="form-control" placeholder="Outside" required="true" pattern="[0-9]{0,5}" title="Only numbers">
                        <input type="text" name="inside" class="form-control" placeholder="Inside" maxlength="2" pattern="[A-Z]{0,2}" title="Only alphabet letters">
                        <input type="number" name="zipCode" class="form-control" placeholder="ZipCode" minlength="4" maxlength="7" min="9999" max="9999999" required="true" pattern="[0-9]{4,7}" title="Only numbers">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Contact</span>
                        </div>
                        <input type="number" name="number" class="form-control" placeholder="Phone number" required="true" pattern="[0-9]" title="Only numbers">
                        <input type="email" name="email" class="form-control" placeholder="Email" required="true" title="Only email">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Grade and Career</span>
                        </div>
                        <input type="number" name="currentGrade" class="form-control" placeholder="Current Grade" required="true" pattern="[0-9]{1,1}" title="Only number">
                        <select name="careerID" class="form-control">
                            {{#each careers}}
                                <option value="{{_id}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

